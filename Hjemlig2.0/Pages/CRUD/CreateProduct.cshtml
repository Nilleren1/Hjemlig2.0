@page
@model Hjemlig2._0.Pages.CreateProductModel
@{
    ViewData["Title"] = "Create";
}
<h6>Create a new Product:</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Product.Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Category" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Category" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Category" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Product.Image" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Image" type="text" class="form-control">
            <span asp-validation-for="@Model.Product.Image" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">Create New Product</button>
        </div>
    </div>
</form>